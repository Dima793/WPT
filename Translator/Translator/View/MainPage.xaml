<Page
    x:Class="Translator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <local:TranslatePageViewModel/>
    </Page.DataContext>

    <Grid>
        <Button Grid.Row="0" Command="{Binding StartListenUserSpeech}" 
        CommandParameter="Hai" Content="{Binding ButtonContent}"
            Width="130"
            Height="100" Margin="140,270,0,270"    />
    </Grid>
</Page>
